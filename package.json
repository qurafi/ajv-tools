{
	"name": "ajv-build-tools",
	"description": "A tool to manage compiling json schemas with ajv to integrate with build tools like rollup and vite",
	"version": "1.0.0-next.8",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"keywords": [
		"ajv",
		"jsonschema",
		"validation",
		"vite",
		"rollup",
		"unplugin",
		"rollup-plugin",
		"vite-plugin"
	],
	"repository": "https://github.com/qurafi/ajv-tools",
	"bugs": "https://github.com/qurafi/ajv-tools/issues",
	"author": "Mohammed Al-Qurafi <mohammedqurafi@gmail.com> (https://github.com/qurafi/)",
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./types": {
			"types": "./types/index.d.ts"
		}
	},
	"files": [
		"dist",
		"src",
		"types/*.d.ts",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"test": "DEBUG_COLORS=1 vitest",
		"test:ci": "vitest",
		"build": "tsc",
		"format": "prettier -w src/**/*.ts",
		"lint": "eslint . --ignore-path .gitignore --ignore-pattern test/fixture",
		"dev": "tsc -w",
		"tscheck": "tsc --noEmit"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.32.34",
		"ajv": "^8.16.0",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "3.0.0-rc.0",
		"ajv-keywords": "^5.1.0",
		"debug": "^4.3.5",
		"esbuild": "^0.17.19",
		"fast-glob": "^3.3.2",
		"fs-extra": "^11.2.0",
		"kleur": "^4.1.5",
		"micromatch": "^4.0.7",
		"rfdc": "^1.4.1",
		"unplugin": "^1.11.0"
	},
	"peerDependencies": {
		"vite": ">=4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/debug": "^4.1.12",
		"@types/fs-extra": "^11.0.4",
		"@types/micromatch": "^4.0.9",
		"@types/node": "^18.19.39",
		"fs-extra": "^11.1.1",
		"publint": "^0.2.8",
		"puppeteer": "^22.12.1",
		"typescript": "^5.5.3",
		"vite": "^5.0.4",
		"vitest": "^1.6.0"
	},
	"packageManager": "pnpm@8.2.0"
}
