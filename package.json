{
    "name": "ajv-build-tools",
    "description": "A tool to manage compiling json schemas with ajv to integrate with build tools like rollup and vite",
    "version": "1.0.0-next.6",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "keywords": [
        "ajv",
        "jsonschema",
        "validation",
        "vite",
        "rollup",
        "unplugin",
        "rollup-plugin",
        "vite-plugin"
    ],
    "repository": "https://github.com/qurafi/ajv-tools",
    "bugs": "https://github.com/qurafi/ajv-tools/issues",
    "author": "Mohammed Al-Qurafi <mohammedqurafi@gmail.com> (https://github.com/qurafi/)",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.js"
        },
        "./unplugin": {
            "types": "./dist/unplugin/index.d.ts",
            "import": "./dist/unplugin/index.js"
        },
        "./core": {
            "types": "./dist/core/index.d.ts",
            "import": "./dist/core/index.js"
        },
        "./types": {
            "types": "./types/index.d.ts"
        }
    },
    "files": [
        "dist",
        "types/*.d.ts",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "DEBUG_COLORS=1 vitest",
        "test:ci": "vitest",
        "build": "tsup 'src/**/index.ts' --format esm --dts --sourcemap --shims --no-splitting",
        "format": "prettier -w src/**/*.ts",
        "lint": "eslint . --ignore-path .gitignore --ignore-pattern test/fixture",
        "dev": "npm run build -- --watch",
        "ts:check": "tsc --noEmit",
        "pkglint": "publint"
    },
    "dependencies": {
        "@sinclair/typebox": "^0.28.20",
        "ajv": "^8.12.0",
        "ajv-errors": "^3.0.0",
        "ajv-formats": "3.0.0-rc.0",
        "ajv-keywords": "^5.1.0",
        "chokidar": "^3.6.0",
        "debug": "^4.3.4",
        "esbuild": "^0.17.19",
        "fast-glob": "^3.3.2",
        "fs-extra": "^11.2.0",
        "kleur": "^4.1.5",
        "micromatch": "^4.0.5",
        "rfdc": "^1.3.1",
        "unplugin": "^1.8.0"
    },
    "devDependencies": {
        "@types/debug": "^4.1.12",
        "@types/fs-extra": "^11.0.4",
        "@types/micromatch": "^4.0.6",
        "@types/node": "^18.19.21",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.10.0",
        "fs-extra": "^11.1.1",
        "prettier": "^2.8.8",
        "publint": "^0.1.16",
        "puppeteer": "^22.3.0",
        "tsup": "^6.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    },
    "packageManager": "pnpm@8.2.0"
}
