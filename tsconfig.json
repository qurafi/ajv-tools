{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "ES2022",
        "target": "ES2020",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true
    },
    "include": ["src", "*.d.ts", "types/*.d.ts", "tests"],
    "exclude": ["dist"]
}
